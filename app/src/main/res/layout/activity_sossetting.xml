    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/font_normal_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:text="@string/txt_lienhekhancap"
            android:textSize="@dimen/size_15" />

        <TextView
            style="@style/font_normal_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="@string/txt_lienhekhancap1"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_tenlienhe1"
                style="@style/font_normal_small"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_editext_sos"
                android:hint="@string/txt_hint_tenlienhe"
                android:paddingLeft="@dimen/dp_4"
                android:textSize="@dimen/size_15" />

            <EditText
                android:id="@+id/ed_phonelienhe1"
                style="@style/font_normal_small"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_editext_sos"
                android:hint="@string/txt_hint_sodienthoai"
                android:inputType="phone"
                android:paddingLeft="@dimen/dp_4"
                android:textSize="@dimen/size_15" />


        </LinearLayout>

        <TextView
            style="@style/font_normal_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="@string/txt_lienhekhancap2"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_tenlienhe2"
                style="@style/font_normal_small"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_editext_sos"
                android:hint="@string/txt_hint_tenlienhe"
                android:paddingLeft="@dimen/dp_4"
                android:textSize="@dimen/size_15" />

            <EditText
                android:id="@+id/ed_phonelienhe2"
                style="@style/font_normal_small"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_editext_sos"
                android:hint="@string/txt_hint_sodienthoai"
                android:inputType="phone"
                android:paddingLeft="@dimen/dp_4"
                android:textSize="@dimen/size_15" />


        </LinearLayout>

        <TextView
            style="@style/font_normal_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
