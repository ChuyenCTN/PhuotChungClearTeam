            android:layout_marginBottom="@dimen/dp_2"
            android:text="@string/txt_lienhekhancap3"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ed_tenlienhe3"
                style="@style/font_normal_small"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_editext_sos"
                android:hint="@string/txt_hint_tenlienhe"
                android:paddingLeft="@dimen/dp_4"
                android:textSize="@dimen/size_15" />

            <EditText
                android:id="@+id/ed_phonelienhe3"
                style="@style/font_normal_small"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/bg_editext_sos"
                android:hint="@string/txt_hint_sodienthoai"
                android:inputType="phone"
                android:paddingLeft="@dimen/dp_4"
                android:textSize="@dimen/size_15" />

        </LinearLayout>

        <TextView
            style="@style/font_normal_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="@string/txt_tinnhankhancap"
            android:textSize="@dimen/size_15" />

        <EditText
            android:id="@+id/ed_tinnhansos"
            style="@style/font_normal_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@drawable/bg_editext_sos"
            android:gravity="left|top"
            android:hint="@string/txt_hint_tinnhankhancap"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="@dimen/dp_80"
            android:padding="@dimen/dp_4"
            android:textSize="@dimen/size_15" />
    </LinearLayout>

    <Button
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/bg_btn_sos"
        android:onClick="onConfirmSOS"
        android:text="@string/txt_label_confirm_sos"
        android:textColor="@color/white" />


</RelativeLayout>