<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingLeft="@dimen/dp_20"
	android:paddingTop="@dimen/dp_20"
	android:paddingRight="@dimen/dp_20">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_140"
		android:background="@drawable/bg_itro1"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:padding="@dimen/dp_20">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="@dimen/dp_45"
				android:src="@drawable/logo" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_40"
				android:text="@string/app_name"
				android:textColor="@color/text" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingLeft="@dimen/dp_28"
			android:paddingBottom="@dimen/dp_20">

			<ImageView
				android:layout_width="@dimen/dp_30"
				android:layout_height="@dimen/dp_30"
				android:src="@drawable/ic_introduct" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_40"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Version"
					android:textSize="@dimen/size_16"
					android:textColor="@color/text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp_2"
					android:text="1.0.0"
					android:textSize="@dimen/size_12" />
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="300dp"
		android:layout_marginTop="@dimen/dp_20"
		android:background="@drawable/bg_intro2"
		android:orientation="vertical"
		android:padding="@dimen/dp_20">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Author"
			android:textColor="@color/text"
			android:textSize="@dimen/size_18" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingLeft="@dimen/dp_10"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="@dimen/dp_30"
				android:layout_height="@dimen/dp_30"
				android:src="@drawable/ic_person2" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_40"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Company"
					android:textSize="@dimen/size_16"
					android:textColor="@color/text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp_2"
					android:text="Clear Team"
					android:textSize="@dimen/size_12"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingLeft="@dimen/dp_10"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="@dimen/dp_30"
				android:layout_height="@dimen/dp_30"
				android:src="@drawable/ic_email" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_40"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Email"
					android:textSize="@dimen/size_16"
					android:textColor="@color/text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp_2"
					android:text="phuotchung@clearteam.com"
					android:textSize="@dimen/size_12"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingLeft="@dimen/dp_10"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="@dimen/dp_30"
				android:layout_height="@dimen/dp_30"
				android:src="@drawable/ic_language" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_40"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Website"
					android:textSize="@dimen/size_16"
					android:textColor="@color/text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp_2"
					android:text="https://clearteam.vn"
					android:textSize="@dimen/size_12"/>
			</LinearLayout>

		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingLeft="@dimen/dp_10"
			android:gravity="center_vertical"
			android:orientation="horizontal">

			<ImageView
				android:layout_width="@dimen/dp_30"
				android:layout_height="@dimen/dp_30"
				android:src="@drawable/ic_local_phone" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/dp_40"
				android:orientation="vertical">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Contact"
					android:textSize="@dimen/size_16"
					android:textColor="@color/text" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/dp_2"
					android:text="+84971066376"
					android:textSize="@dimen/size_12" />
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>
</LinearLayout>