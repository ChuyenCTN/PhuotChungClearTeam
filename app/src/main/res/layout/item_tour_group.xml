<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:minHeight="@dimen/dp_68"
    android:orientation="vertical"
    android:padding="@dimen/dp_4">

    <TextView
        android:id="@+id/tv_name_item_tour_group"
        style="@style/font_normal_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_toLeftOf="@+id/img_more_item_tour_group"
        android:drawableLeft="@drawable/ic_eye_show"
        android:drawablePadding="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/change_password" />

    <ImageView
        android:id="@+id/img_more_item_tour_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/dp_8"
        app:srcCompat="@drawable/ic_more_22" />

</RelativeLayout>