<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bg_dialog"
	android:orientation="vertical"
	android:padding="@dimen/dp_20">
	<TextView
		android:id="@+id/tv_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/text"
		android:textSize="@dimen/size_16"
		android:layout_gravity="center_horizontal"
		android:layout_marginBottom="@dimen/dp_10"
		android:text="@string/tao_nhom"/>

	<EditText
		android:id="@+id/edNameGroup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/size_14"
		android:textColor="@color/text"
		android:textColorHint="@color/text_hint"
		android:hint="Tên nhóm" />

	<EditText
		android:id="@+id/edStart"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/size_14"
		android:textColor="@color/text"
		android:textColorHint="@color/text_hint"
		android:hint="Điểm khởi hành" />

	<EditText
		android:id="@+id/edEnd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="@dimen/size_14"
		android:textColor="@color/text"
		android:textColorHint="@color/text_hint"
		android:hint="Điểm đến" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<EditText
			android:id="@+id/edDate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="@dimen/size_14"
			android:textColor="@color/text"
			android:textColorHint="@color/text_hint"
			android:hint="Ngày khởi hành" />

		<ImageView
			android:id="@+id/imgDate"
			android:layout_width="@dimen/dp_24"
			android:layout_height="@dimen/dp_24"
			android:src="@drawable/calendar" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_10"
		android:gravity="center"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btnCancel"
			android:layout_width="@dimen/dp_125"
			android:layout_height="wrap_content"
			android:layout_marginRight="1dp"
			android:background="@drawable/bg_btn_huy"
			android:text="@string/btn_huy"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textSize="@dimen/size_16" />

		<Button
			android:id="@+id/btnOk"
			android:layout_width="@dimen/dp_125"
			android:layout_height="wrap_content"
			android:layout_marginLeft="1dp"
			android:background="@drawable/bg_btn_ok"
			android:text="@string/btn_them"
			android:textAllCaps="false"
			android:textColor="@color/white"
			android:textSize="@dimen/size_16" />
	</LinearLayout>


</LinearLayout>
