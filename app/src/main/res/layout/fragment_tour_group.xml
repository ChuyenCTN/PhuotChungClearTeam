<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".fragment.TourGroupFragment">

	<com.google.android.material.tabs.TabLayout
		android:id="@+id/tab_tour_group"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:background="#F1F4F5"
		app:tabIndicatorHeight="@dimen/dp_3"
		app:tabSelectedTextColor="@color/bg_toolbar"
		app:tabIndicatorColor="@color/bg_toolbar"
		app:tabTextColor="@color/text" />

	<androidx.viewpager.widget.ViewPager
		android:id="@+id/vp_tour_group"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />
</LinearLayout>