<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_info_direction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/dp_160"
    android:orientation="vertical"
    android:padding="@dimen/dp_6"
    android:paddingTop="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_20"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ImageView
        android:id="@+id/img_close_bottom_info"
        android:layout_width="@dimen/dp_36"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/dp_4"
        app:srcCompat="@drawable/ic_close_black_24dp" />

    <TextView
        android:id="@+id/tv_name_bottom_info"
        style="@style/font_bold_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_address_bottom_info"
        style="@style/font_normal_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_bottom_info"
        android:layout_marginTop="@dimen/dp_8" />

    <TextView
        android:id="@+id/tv_distance_bottom_info"
        style="@style/font_normal_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address_bottom_info"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_8"
        android:drawableLeft="@drawable/ic_distance"
        android:drawablePadding="@dimen/dp_6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time_bottom_info"
        style="@style/font_normal_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_distance_bottom_info"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/tv_distance_bottom_info"
        android:drawableLeft="@drawable/ic_clock_info"
        android:drawablePadding="@dimen/dp_6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_choose_walking_bottom_info"
        style="@style/font_normal_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_distance_bottom_info"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_bycicle"
        android:drawablePadding="@dimen/dp_6"
        android:padding="@dimen/dp_6"
        android:text="@string/txt_label_walking" />


    <TextView
        android:id="@+id/tv_choose_driving_bottom_info"
        style="@style/font_normal_small"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_choose_walking_bottom_info"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/tv_choose_walking_bottom_info"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_driving"
        android:drawablePadding="@dimen/dp_6"
        android:padding="@dimen/dp_6"
        android:text="@string/txt_label_driving" />


</RelativeLayout>